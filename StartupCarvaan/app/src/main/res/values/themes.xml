<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StartupCarvaan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="maintextcolour">@color/teal_200</item>
        <item name="backgroundcolourmain">@color/white</item>
        <item name="txtsugestion">@color/black</item>
        <item name="backgroundlogin_suggest">@color/white</item>
        <item name="cointextcolour">@color/purple</item>
        <item name="bidbackground">@color/grey</item>
        <item name="barcolour">@color/blue</item>
        <item name="helppagery">@color/skyblue</item>
        <item name="darkwhiteback">@color/white</item>
        <item name="greyback">@color/grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StartupCarvaan.Fullscreen" parent="Theme.StartupCarvaan">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.StartupCarvaan.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.StartupCarvaan.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.StartupCarvaan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StartupCarvaan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StartupCarvaan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>