<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp"
    android:elevation="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/productimage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/loginhy"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/underprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginLeft="18dp"
                android:textStyle="bold"
                android:text="watch 200dghk "
                android:textColor="@color/black"
                android:textSize="15.5sp"
                tools:autoSizeTextType="uniform"></TextView>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3.5dp"
                android:text="this is a very good item with super base and good qwality music it is worth the amount and it is absolutely free just use your bonus coin as much as possible"
                android:textSize="12.5sp"
                tools:autoSizeTextType="uniform">
            </TextView>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Price: ">
                        </TextView>

                        <TextView
                            android:id="@+id/currentprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="3000"></TextView>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/bidprice"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bidprice"
                        android:inputType="number"
                        android:gravity="center"
                        android:hint="enter your bid"
                        android:textColor="#000000" />
                </LinearLayout>
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Winner: ">
                        </TextView>

                        <TextView
                            android:id="@+id/currentwinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="3000"></TextView>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/join"
                        android:layout_marginTop="10dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/joinbu"
                        android:gravity="center"
                        android:text="Join"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>