<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greyish"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/close67"
            android:src="@drawable/cross"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price_of_shares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"


            android:gravity="right"
            android:text="$ 2.15"
            android:textColor="#E8D63C"
            android:textSize="45sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"

            android:text="Per Share"
            android:textColor="#FFE8D63C"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/totalsharestosell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:text="Available:1000"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="select one of your holdings"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:popupBackground="@color/yellow"

        android:fontFamily="sans-serif-medium"

        android:textSize="14sp"


        android:background="@drawable/spinnerbord"
        android:splitMotionEvents="true"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

         android:layout_marginLeft="30dp"
            android:text="Price:"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


android:layout_marginLeft="20dp"
            android:text="quantity:"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/shares"
            android:layout_width="120dp"
            android:layout_height="32dp"


            android:background="@drawable/sellinput"
            android:gravity="center"
            android:textColorHint="#ffffff"
            android:inputType="number"
            android:textColor="#ffffff" />
    </LinearLayout>



    <Button
        android:id="@+id/btn_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18dp"
        android:backgroundTint="@color/yellow"

        android:text="Sell"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp" />


</LinearLayout>
