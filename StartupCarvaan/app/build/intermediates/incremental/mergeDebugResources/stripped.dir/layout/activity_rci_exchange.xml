<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".coin_exchange.rci_exchange">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6">
        <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heading_about_rci"
        android:text="About RCI "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc_aboutRci"
            android:textColor="@color/black"
            android:text="@string/about_rci"
            android:textSize="14sp"
            android:layout_margin="8sp" />

    <com.github.mikephil.charting.charts.LineChart
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:id="@+id/lineChart_rci"
        >

    </com.github.mikephil.charting.charts.LineChart>


    </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:id="@+id/Price">

            <TextView
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:text="Current Price of RCI:     "
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="50"
                android:textAlignment="center"
                android:layout_marginStart="25sp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"
                android:id="@+id/price_of_RCI"/>
        </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="BUY"
            android:gravity="center"
            android:layout_marginRight="30sp"
            android:background="@drawable/timer"/>
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="SELL"
            android:layout_marginLeft="30sp"
            android:background="@drawable/timer"/>

    </LinearLayout>

    </LinearLayout>
  </ScrollView>
</RelativeLayout>